{
  "compilerOptions": {
    "baseUrl": "src",
    "paths": {
      "@base/*": ["./base/*"],
      "~/*": ["./*"]
    },
    "types": ["jest", "chrome"],
    "target": "ES2021",
    "jsx": "react-jsx",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "verbatimModuleSyntax": true
  }
}
