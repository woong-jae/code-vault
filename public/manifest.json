{
  "manifest_version": 3,
  "name": "CodeVault",
  "description": "CodeVault에서 제공하는 크롬 확장도구입니다.",
  "version": "0.1",
  "action": {},
  "background": {
    "service_worker": "background.js"
  },
  "permissions": ["tabs", "activeTab", "scripting", "webRequest"],
  "host_permissions": ["https://*/*"],
  "content_scripts": [
    {
      "id": "CodeVault-programmers",
      "matches": [
        "https://school.programmers.co.kr/learn/courses/30/lessons/*"
      ],
      "js": ["programmers.js"],
      "world": "MAIN"
    },
    {
      "id": "CodeVault-common_isolated",
      "matches": [
        "https://school.programmers.co.kr/learn/courses/30/lessons/*"
      ],
      "js": ["common_isolated.js"]
    }
  ]
}
